{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/jwt-auth(|/.*)$": "<rootDir>/../../../libs/jwt-auth/src/$1",
    "^@app/payment-integration(|/.*)$": "<rootDir>/../../../libs/payment-integration/src/$1"
  }
}
